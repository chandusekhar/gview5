@using gView.Server.AppCode
@inject gView.Server.Services.Hosting.UrlHelperService UrlHelperService
@inject gView.Server.Services.Security.LoginManagerService LoginManagerService
@{
    ViewData["Title"] = "Home Page";
    var username = LoginManagerService.LoginUsername(this.Context.Request);
    var isManageUser = LoginManagerService.IsManageUser(this.Context.Request);
}

<div>
    <div class="main-logo">
        <div class="text">gView Server</div>
    </div>
    <div class="main-nav-panels">
        <a class="main-nav-panel browse" asp-area="" asp-controller="BrowseServices" asp-action="Index">
            <div class="text">Browse Services</div>
        </a>
        <a class="main-nav-panel geoservices" href="@(UrlHelperService.AppRootUrl(this.Context.Request))/geoservices/rest/services">
            <div class="text">GeoServices (REST)</div>
        </a>
        @if (isManageUser || (Globals.AllowFormsLogin && (isManageUser == true || String.IsNullOrWhiteSpace(username))))
        {
        var hasManagerLogin = LoginManagerService.HasManagerLogin();
        <a class="main-nav-panel manage @(!hasManagerLogin ? "required":"")" asp-area="" asp-controller="Manage" asp-action="Index">
            <div class="text">Manage</div>
        </a>
        }
    </div>
</div>

@if (Model != null)
{

    <MudCard Elevation="2">
        <MudCardContent>
            <MudText Typo="Typo.h6">Scales</MudText>
            <MudGrid>
                <MudItem xs="10">
                    <MudTextField Label="New Scale" @ref="_addScaleInput"
                                  Format="N6" T="double" Immediate="true"
                                  InputType="InputType.Number" Step="0.1"
                                  Variant="Variant.Text"></MudTextField>
                </MudItem>
                <MudItem xs="2">
                    <MudButton OnClick="AddScale" Variant="Variant.Filled" Color="Color.Primary" Size="MudBlazor.Size.Small">Add</MudButton>
                </MudItem>

                @foreach (var scale in Model.Scales.OrderDescending())
                {
                    <MudItem xs="10">
                        <MudText Typo="Typo.body2">@scale.ToString()</MudText>
                    </MudItem>
                    <MudItem xs="2">
                        <MudButton Variant="Variant.Filled" Color="Color.Secondary" Size="MudBlazor.Size.Small">Remove</MudButton>
                    </MudItem>
                }
            </MudGrid>
        </MudCardContent>
    </MudCard>
}

@code{
    [Parameter] public TileScalesModel? Model { get; set; }
    private MudTextField<double>? _addScaleInput;

    private void AddScale()
    {
        if(_addScaleInput!=null && Model!=null)
        {
            Model.Scales.Add(_addScaleInput.Value);
            _addScaleInput.Value = 0D;
        }
    }
}
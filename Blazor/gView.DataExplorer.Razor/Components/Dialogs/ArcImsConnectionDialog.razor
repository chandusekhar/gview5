@inherits ModalDialogFormBase<ArcImsConnectionModel>
@inject IApplicationScope AppScope

<ModalDialogFormBase T="ArcImsConnectionModel"
                     OnDialogClose="base.OnDialogClose"
                     Model="base.Model">
    <FormContent>
        <MudGrid Spacing="2" Justify="Justify.FlexEnd">
            <MudItem xs="8">
                <MudCard Elevation="2">
                    <MudCardContent>
                        <MudText Typo="Typo.h6">Service</MudText>

                        <MudTextField @bind-Value="Model.Server"
                                      Label="Servlet Url Endpoint" />

                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="4">
                <MudCard Elevation="2">
                    <MudCardContent>
                        <MudText Typo="Typo.h6">Credentials (optional)</MudText>
                        <MudTextField @bind-Value="Model.Username"
                                      Label="Username" />

                        <MudTextField @bind-Value="Model.Password"
                                      InputType="InputType.Password"
                                      Label="Password" />
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>
    </FormContent>
    <InfoContent>
        <MudText Typo="Typo.body1">Examples for input:</MudText>
        <MudText Typo="Typo.body2">ArcIMS Server: https://my-server/servlet/com.esri.esrimap.Esrimap</MudText>
        <MudText Typo="Typo.body2">gView Server: https://my-server/servlet/com.esri.esrimap.Esrimap</MudText>
    </InfoContent>
</ModalDialogFormBase>
@inherits ModalDialogFormBase<PromptDialogModel>

<ModalDialogFormBase T="PromptDialogModel"
                     OnDialogClose="base.OnDialogClose"
                     Model="base.Model">
    <DialogBody>
        <MudTextField @bind-Value="Model.Value"
                      @onkeyup="HandleFilterKeyPress"
                      Label="@Model.Prompt"
                      HelperText="@Model.HelperText"
                      Required="@Model.Required" />
    </DialogBody>
</ModalDialogFormBase>

@code {
    private Task HandleFilterKeyPress(KeyboardEventArgs args)
        => args.Key == "Enter"
            ? base.Submit()
            : Task.CompletedTask;
}
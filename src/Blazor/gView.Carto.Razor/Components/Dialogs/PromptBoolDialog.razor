@inherits ModalDialogFormBase<PromptDialogModel<bool>>

<ModalDialogFormBase T="PromptDialogModel<bool>"
                     OnDialogClose="base.OnDialogClose"
                     Model="base.Model">
    <DialogBody>
        <MudCheckBox @bind-Checked="Model.Value"
                     Label="@Model.Prompt"
                     Required="@Model.Required" />

        @if (!String.IsNullOrEmpty(Model.HelperText))
        {
            <MudText Typo="Typo.body2">@Model.HelperText</MudText>
        }
    </DialogBody>
</ModalDialogFormBase>